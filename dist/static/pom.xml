<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>au.id.raboczi.cornerstone</groupId>
    <artifactId>dist</artifactId>
    <version>0.1-SNAPSHOT</version>
  </parent>

  <artifactId>dist-static</artifactId>
  <name>Cornerstone :: dist :: static</name>
  <packaging>pom</packaging>
  <description>Static distribution of Cornerstone</description>
  <inceptionYear>2019</inceptionYear>

  <properties>
    <wicket.version>8.8.0</wicket.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>wicket-main</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>

    <dependency>
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>static</artifactId>
      <type>kar</type>
    </dependency>

    <dependency>
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>standard</artifactId>
      <type>xml</type>
      <classifier>features</classifier>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.karaf.tooling</groupId>
        <artifactId>karaf-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>process-resources</id>
            <phase>process-resources</phase>
            <goals>
              <goal>assembly</goal>
            </goals>
          </execution>
          <execution>
            <id>package</id>
            <goals>
              <goal>archive</goal>
            </goals>
          </execution>
          <!-- This execution is not @threadSafe, so there will be warnings if parallel builds are attempted. -->
          <execution>
            <id>dockerfile</id>
            <goals>
              <goal>dockerfile</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <startupFeatures>
            <startupFeature>static-framework</startupFeature>
            <startupFeature>webconsole</startupFeature>
            <startupFeature>war</startupFeature>
          </startupFeatures>
          <startupBundles>
            <startupBundle>mvn:org.apache.felix/org.apache.felix.fileinstall/3.6.4</startupBundle>

            <startupBundle>mvn:com.github.openjson/openjson/1.0.12</startupBundle>
            <startupBundle>mvn:commons-io/commons-io/1.4</startupBundle>
            <startupBundle>mvn:commons-fileupload/commons-fileupload/1.4</startupBundle>
            <startupBundle>mvn:org.apache.commons/commons-collections4/4.4</startupBundle>
            <startupBundle>mvn:org.danekja/jdk-serializable-functional/1.8.6</startupBundle>

            <startupBundle>mvn:org.apache.wicket/wicket-core/${wicket.version}</startupBundle>
            <startupBundle>mvn:org.apache.wicket/wicket-request/${wicket.version}</startupBundle>
            <startupBundle>mvn:org.apache.wicket/wicket-util/${wicket.version}</startupBundle>

            <startupBundle>mvn:au.id.raboczi.cornerstone/wicket-main/${project.version}/war</startupBundle>
          </startupBundles>
          <framework>static</framework>
          <useReferenceUrls>true</useReferenceUrls>
          <environment>static</environment>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>docker</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.karaf.tooling</groupId>
            <artifactId>karaf-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>docker-image</id>
                <goals>
                  <goal>docker</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <imageName>${project.artifactId}</imageName>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
