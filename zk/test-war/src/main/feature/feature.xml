<?xml version="1.0" encoding="UTF-8"?>
<features name="${project.artifactId}-${project.version}"
          xmlns="http://karaf.apache.org/xmlns/features/v1.4.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.4.0">

  <feature name="${project.artifactId}" version="${project.version}" description="Cornerstone test web application">
    <feature>${project.artifactId}-domain</feature>
    <feature>${project.artifactId}-presentation</feature>
  </feature>

  <feature name="${project.artifactId}-api" version="${project.version}" description="Cornerstone test web application APIs">
    <bundle>mvn:au.id.raboczi.cornerstone/service-api/${project.version}</bundle>
    <bundle>mvn:au.id.raboczi.cornerstone/test-service-api/${project.version}</bundle>
    <bundle>mvn:au.id.raboczi.cornerstone/user-service-api/${project.version}</bundle>
    <bundle>mvn:org.osgi/org.osgi.service.useradmin/1.1.0</bundle>
  </feature>

  <feature name="${project.artifactId}-domain" version="${project.version}" description="Cornerstone test web application domain logic">
    <feature prerequisite="true">${project.artifactId}-api</feature>

    <bundle>mvn:au.id.raboczi.cornerstone/aspectjrt/${project.version}</bundle>
    <bundle>mvn:au.id.raboczi.cornerstone/test-aspect/${project.version}</bundle>

    <bundle>mvn:au.id.raboczi.cornerstone/test-service/${project.version}</bundle>
    <bundle>mvn:au.id.raboczi.cornerstone/user-service/${project.version}</bundle>
    <bundle>mvn:au.id.raboczi.cornerstone/useradmin/${project.version}</bundle>
  </feature>

  <feature name="${project.artifactId}-presentation" version="${project.version}" description="Cornerstone test web application presentation logic">
    <feature>war</feature>
    <feature prerequisite="true">${project.artifactId}-api</feature>
    <feature prerequisite="true">zk-framework</feature>
    <feature prerequisite="true">rxzk</feature>

    <bundle>mvn:au.id.raboczi.cornerstone/zk-api/${project.version}</bundle>
    <bundle>mvn:au.id.raboczi.cornerstone/zk-util/${project.version}</bundle>
    <bundle>mvn:au.id.raboczi.cornerstone/test-service-zk/${project.version}</bundle>
    <bundle>mvn:au.id.raboczi.cornerstone/user-service-zk/${project.version}</bundle>
    <bundle>webbundle:mvn:${project.groupId}/${project.artifactId}/${project.version}/war?Web-ContextPath=cornerstone</bundle>
  </feature>

  <feature name="zk-framework" version="${project.version}" description="ZK framework">
    <feature prerequisite="true">war</feature>
    <bundle>mvn:commons-codec/commons-codec/1.14</bundle>
    <bundle>mvn:commons-io/commons-io/2.6</bundle>
    <bundle>mvn:commons-fileupload/commons-fileupload/1.4</bundle>
    <bundle>mvn:javax.portlet/portlet-api/3.0.1</bundle>
    <bundle>mvn:javax.websocket/javax.websocket-api/1.1</bundle>
    <bundle>mvn:org.javassist/javassist/3.26.0-GA</bundle>
    <bundle>mvn:au.id.raboczi.cornerstone/zk-embed/${project.version}</bundle>
  </feature>

  <feature name="rxzk" version="${project.version}" description="Reactive extensions for ZK framework">
    <feature prerequisite="true">wrap</feature>
    <feature prerequisite="true">zk-framework</feature>
    <bundle>mvn:org.reactivestreams/reactive-streams/1.0.3</bundle>
    <bundle>mvn:io.reactivex.rxjava2/rxjava/2.2.17</bundle>
    <bundle>wrap:mvn:org.zkoss.addons/rxzk/0.8.0</bundle>
  </feature>
</features>
